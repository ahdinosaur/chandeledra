pcm.jack
{
        type plug
        slave.pcm "jack_output"
        hint
        {
                show on
                description "Alsa (JACK plugin)"
        }
}

pcm.jack_output
{
        type jack
        playback_ports
        {
                0 system:playback_1
                1 system:playback_2
        }
        capture_ports
        {
                0 system:capture_1
                1 system:capture_2
        }
        hint
        {
                show off
                description "Alsa (JACK output)"
        }
}
